<div class="right_contant">
    <div class="page_head">
        <h2 class="page_title">Categories</h2>
    </div>
    <div class="dark_card card_height">
        <div class="table_header">
            <div class="table_search">
                <label for="searchInput">Search</label>
                <input type="search" id="searchInput">
              </div>
            <div class="file_save_icos">
                
            </div>
            <a href="/categories_add" class="add_link">+Add Category</a>
        </div>
        <!-- <br>
        <button class="table_az"><i class="ph ph-sort-ascending"></i><span>A-Z</span></button>
        <br> -->
        <div class="table-responsive">
            <table class="data_table">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Category</th>
                        <th>Image</th>
                        <th>More</th>
                    </tr>
                </thead>
                <tbody>
                    <% let index = 1; %>
                    <% find_categories.forEach(function(data) { %>
                        <tr>
                            <td><%= index++ %></td>
                            <td><%- data.title %></td>
                        
                                <td><img src="<%-data.image%>" alt=""></td>
                        
                            <td>
                                <div class="action_btns">
                                    <a href="/categories_edit/<%= data.hash_id%>" class="acti_btn"><i class="fa-solid fa-pen"></i></a>
                                    <a href="" data-bs-toggle="modal" data-bs-target="#delete_detail" class="acti_btn text-danger"><i class="fa fa-trash"></i></a>
                                </div>
                            </td>

                        </tr>
                        <div class="modal fade ico_modal" id="delete_detail" tabindex="-1" aria-labelledby="exampleModalLabel" style="display: none;" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" style="max-width: 306px;">
                                <div class="modal-content rounded-4 border-0">
                                    <div class="modal-body text-center pt-lg-5 px-lg-4">
                                        <i class="ph-fill ph-trash-simple"></i>
                                        <h6>Delete</h6>
                                        <p>Are you sure want to delete?</p>
                                        
                                        <a href="/categories_deleted/<%= data.hash_id%>" class="theme_btn">Yes</a>
                                        <button class="white_border_btn border-0 text-black" data-bs-dismiss="modal" aria-label="Close">No</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end pt-4">
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                <!-- Previous button -->
                <% if (currentPage > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="/categories_list?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a>
                </li>
                <% } else { %>
                <li class="page-item disabled">
                  <a class="page-link" href="#">Previous</a>
                </li>
                <% } %>
    
                <!-- Page numbers (1 to 5) -->
                <% for (let i = 1; i <= Math.min(5, totalPages); i++) { %>
                <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                  <a class="page-link" href="/categories_list?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
                </li>
                <% } %>
    
                <!-- Ellipsis if there are more than 5 pages -->
                <% if (totalPages > 5) { %>
                <li class="page-item disabled">
                  <a class="page-link" href="#">...</a>
                </li>
                <% } %>
    
                <!-- Next button -->
                <% if (currentPage < totalPages) { %>
                <li class="page-item">
                  <a class="page-link" href="/categories_list?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
                </li>
                <% } else { %>
                <li class="page-item disabled">
                  <a class="page-link" href="#">Next</a>
                </li>
                <% } %>
              </ul>
            </nav>
          </div>
    </div>
</div>