<section class="content_Area py-5">
  <div class="container-fluid bg-white rounded-4 h-100">
    <div class="row align-items-center mb-4">
      <div class="col-md-6">
        <h5 class="fs_26 fw-bold text-black mb-3 mb-md-0">Managers Lists</h5>
      </div>
      <div class="col-md-6">
        <div class="d-flex justify-content-md-end gap-4 align-items-center">
          <a href="/manager_add" class="btn_theme btn_empty rounded-pill fs_16 ps-4 pe-2  d-flex position-relative justify-content-center text-center align-items-center">
            <img src="../../assets/images/plus.png" alt="Profile Image" class="left_plus"> Add Managers </a>

          <a href="" class="text_theme fw-semibold"> <img src="../../assets/images/black_trash.png" alt="Profile Image" class="me-2"> Trash</a>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="hegiht_650">
          <div class="table-responsive">
            <table class="table">
              <thead class="table-light fs_14">
                <tr>
                  <th>Manager Id
                  </th>
                  <th scope="col">First Name</th>
                  <th scope="col">Last Name</th>
                  <th scope="col">Image</th>
                  <th scope="col">Working On</th>

                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% let index = 1; %>
                <% find_users.forEach(function(data) { %>
                <tr>
                  <td>
                    <%- data.id %></td>
                  <td>
                    <span style="color: black;"><%- data.first_name %></span>

                  </td>
                  <td>
                    <span style="color: black;"><%- data.last_name %></span>

                  </td>
                  <td>
                    <a href="<%-data.image%>" target="_blank">
                      <img src="<%-data.image%>" alt="<%-data.image%>" style="width: 70px; height: 80px;">
                    </a>
                  </td>
                  <td>Events</td>

                  <td>
                    <a href="#" data-bs-toggle="modal" data-bs-target="#delete_detail" class="trash">
                      <img src="../../assets/images/trash.png" alt="Table">
                    </a>
                    <a href="/manager_edit/<%-data.hash_id%>">
                      <img src="../../assets/images/blue_pencil.png" alt="Table">
                    </a>
                  </td>

                  <!-- Modal Structure -->
                  <div class="modal fade" id="delete_detail" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" style="max-width: 306px;">
                      <div class="modal-content rounded-4 border-0">
                        <div class="modal-body text-center pt-lg-5 px-lg-4">
                          <i class="ph-fill ph-trash-simple" style="font-size: 3rem;"></i> <!-- Icon styling -->
                          <h6>Delete</h6>
                          <p>Are you sure you want to delete?</p>
                          <a href="/manager_deleted/<%= data.hash_id %>" class="theme_btn">Yes</a>
                          <button class="white_border_btn border-0 text-black" data-bs-dismiss="modal" aria-label="Close">No</button>
                        </div>
                      </div>
                    </div>
                  </div>

                  <% }); %>'

              </tbody>
            </table>

          </div>
        </div>

      </div>
      <div class="row">
        <div aria-label="Page navigation">
          <nav aria-label="Page navigation">
            <ul class="pagination mt-4 d-flex align-items-center gap-3">
              <!-- Previous button -->
              <% if (currentPage > 1) { %>
              <li class="page-item">
                <a class="page-link" href="/manager_list?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a>
              </li>
              <% } else { %>
              <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
              </li>
              <% } %>

              <!-- Page numbers (1 to 5) -->
              <% for (let i = 1; i <= Math.min(5, totalPages); i++) { %>
              <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                <a class="page-link" href="/manager_list?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
              </li>
              <% } %>

              <!-- Ellipsis if there are more than 5 pages -->
              <% if (totalPages > 5) { %>
              <li class="page-item disabled">
                <a class="page-link" href="#">...</a>
              </li>
              <% } %>

              <!-- Next button -->
              <% if (currentPage < totalPages) { %>
              <li class="page-item">
                <a class="page-link" href="/manager_list?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
              </li>
              <% } else { %>
              <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
              </li>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
</section>