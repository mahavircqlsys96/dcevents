<%-include('../../Vender/partials/head')%>
<section class="bg_blue p-3 blue_back">
    <div class="bg-white rounded-3 up_main">
      <section class="top_setps p-4">
        <div class="container-fluid bg-white">
          <div class="row">
            <div class="col-md-12 d-flex justify-content-between align-items-center position-relative">
              <a href=" "> <img src="../assets/images/logo.png" alt="Logo" class="logo_m">
              </a>
              <div class="progress-container d-flex align-items-center">
                <div class="progress-step active me-2 "></div>
                <div class="progress-step active me-2"></div>
                <div class="progress-step active me-2"></div>
                <div class="progress-step"></div>
              </div>
              <a href="/dashboard" class="skip text-decoration-none fs_18 text_theme">Skip for now</a>
            </div>
          </div>
        </div>
      </section>
      <section class="content_Area">
        <div class="container bg-white rounded-4 h-100">
            <!-- <<<<body section> -->
            <div class="row align-items-center h-100">
              <div class="col-md-6 mx-auto right_borders h-100 border-0">
                <% if(find_products && find_products.length > 0) { %>
                  <div class="table-responsive">
                    <table class="table">
                      <thead class="table-light fs_14">
                        <tr>
                          <th scope="col">Product Id</th>
                          <th scope="col">Name</th>
                          <th scope="col">Price</th>
                          <th scope="col">Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% find_products.forEach(function(product) { %>
                          <tr>
                            <td scope="row"><%= product.id %></td>
                            <td><img src="../assets/images/pro.png" alt=""> <%= product.name %></td>
                            <td>Â£<%= product.price %></td>
                            <td><img src="../assets/images/table.png" alt="Table" class="trash"></td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                <% } else { %>  
                  <div class="p-4">
                    <h5 class="mb-4 fs_26 fw-bold text-center text-black">Add Your First Product</h5>
                    <form action="" class="mb-2 rounded-5 signup_form py-4">
                      <div class="profile-upload mb-4">
                        <img src="../assets/images/first_product.png" alt="Profile Image" class="rounded-circle" id="profilePreview1">
                      </div>
                      <div class="form-group mb-3 position-relative pay_Card mb-3">
                        <p class="mb-2 fs_16 opacity-50 text-center">No product Found</p>
                      </div>
                    </form>
                  </div>
                <% } %>
          
                <!-- Add Product Button -->
                <a href="/add_new_product?id=<%= find_user ? find_user.hash_id : '' %>" class="btn_theme btn_empty w-100 rounded-pill fs_16 ps-4 pe-2 d-flex position-relative justify-content-center text-center align-items-center">
                  <img src="../assets/images/plus.png" alt="Profile Image" class="left_plus"> Add Product
                </a>
              </div>
            </div>
          </div>
          
      </section>
      <section class="back">
        <div class="container-fluid">
          <div class="d-flex justify-content-between page_footer">
            <a href="/sign_up3?id=<%-find_user.hash_id%>" class="fs_20 d-flex align-items-center gap-2 fw-bold "> <i class="ph-bold ph-caret-left"></i> Back </a>
