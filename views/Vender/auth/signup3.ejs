                          <div class="payment-button text-primary">
                            <img src="../assets/images/stripe.png" alt="apple pay logo">
                          </div>
                          <!-- <<<<<< google pay button>>> -->
                          <div class="payment-button">
                            <img src="../assets/images/g pay.png" alt="apple pay logo">
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>
            </div>
        </div>
    </div>
    <section class="back">
        <div class="container-fluid">
          <div class="d-flex justify-content-between page_footer">
            <a href="/sign_up2?id=<%-find_user.hash_id%>" class="fs_20 d-flex align-items-center gap-2 fw-bold "> <i class="ph-bold ph-caret-left"></i> Back </a>
            <button type="submit" class="fs_20 d-flex align-items-center gap-2 active_next text_theme fw-bold" style="border: 0; background-color: transparent;">
              Next <i class="ph-bold ph-caret-right"></i>
