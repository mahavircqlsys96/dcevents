                <form action="/sign_up3_save" method="POST" class="mb-2 rounded-5 signup_form py-4" enctype="multipart/form-data">
                  <div class="profile-upload mb-4">
                    <img src="../assets/images/card.png" alt="Profile Image" class="rounded-circle" id="profilePreview">
                  </div>
                  <div class="mx-auto">
                    <div class=" ">
